{
  "name": "chatroom-server",
  "version": "0.0.1",
  "main": "server.js",
  "repository": "git",
  "author": "vincent",
  "license": "MIT",
  "scripts": {
    "dev": "better-npm-run dev",
    "lint": "better-npm-run lint",
    "build": "better-npm-run build",
    "prod": "better-npm-run prod"
  },
  "betterScripts": {
    "dev": {
      "command": "concurrently --kill-others \"nodemon --exec babel-node server.js | bunyan\" \"node webpack/webpack-dev-server --env.dev --history-api-fallback --progress --inline --hot\"",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "lint": {
      "command": "eslint config/ helpers/ libs/ routes/ --ext .js",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "babel-node build.js | bunyan",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "build:*"
      }
    },
    "prod": {
      "command": "node server.js | bunyan",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "better-npm-run": "0.0.14",
    "bluebird": "3.4.7",
    "body-parser": "1.16.0",
    "bunyan": "1.8.5",
    "express": "4.14.1",
    "hashmap": "^2.3.0",
    "lodash": "4.17.4",
    "moment": "2.17.1",
    "request": "2.79.0",
    "ws": "^3.2.0"
  },
  "devDependencies": {
    "babel-cli": "6.22.2",
    "babel-core": "6.22.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "6.2.10",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "6.23.0",
    "babel-preset-es2015": "6.22.0",
    "babel-preset-es2017-node7": "0.4.1",
    "babel-preset-react": "6.22.0",
    "babel-preset-stage-2": "6.22.0",
    "babel-preset-stage-3": "6.22.0",
    "concurrently": "3.2.0",
    "debug": "2.6.0",
    "eslint": "3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "4.0.0",
    "eslint-plugin-react": "6.10.0",
    "nodemon": "1.11.0",
    "promise-polyfill": "6.0.2",
    "transform-runtime": "0.0.0"
  }
}
